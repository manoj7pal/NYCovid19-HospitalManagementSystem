@{
    ViewData["Title"] = "Index";
}

@model CovidDashboard.Models.PatientHomeModel
<div class="text-center">
    <h2>
        Patient's at <b>@ViewBag.HospitalName</b>
    </h2>

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary" href="/patient/Manage" role="button">Add Patient</a>
        </div><br />
        <div class="panel panel-default pre-scrollable">
            <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Address</th>
                        <th>Contact Number</th>
                        <th>Date of Admission</th>
                        <th>Date of Discharge</th>
                        <th>Is Discharged</th>
                        <th>Edit Patient</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model.Patients.OrderByDescending(r => r.Name))
                    {
                        <tr class='@(patient.IsDischarged ? "red" : "")'>
                            <td>@patient.Name</td>
                            <td>@patient.Age</td>
                            <td>@patient.Address</td>
                            <td>@patient.ContactNumber</td>
                            <td>@patient.DateOfAdmission.ToString("MMM-dd-yyyy HH:mm")</td>
                            <td>@(patient.IsDischarged ? patient.DateOfDischarge.ToString("MMM-dd-yyyy HH:mm") : "")</td>
                            <td>@(patient.IsDischarged ? "Yes":"No")</td>
                            <td>
                                <div class="row">
                                    <div class="col-3"> <a href="~/Patient/Manage/@patient.Id" class="btn btn-sm btn-primary">Edit</a></div>
                                    <div class="col-3">

                                        <form asp-action="RemovePatient" asp-controller="Patient" method="post">
                                            <input id="id" name="id" type="hidden" value="@patient.Id" />
                                            <input type="submit" value="Delete" class="btn btn-sm btn-primary" />
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
