@{
    ViewData["Title"] = "Index";
}

@model CovidDashboard.Models.HospitalHomeModel
<div class="text-center">
    <h2 ><br />
        New York State - COVID-19 Hospitals
    </h2>

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary " href="/hospital/Manage" role="button">Add Hospital</a>
        </div><br />
        <div class="panel panel-default pre-scrollable">
            <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Region</th>
                        <th>Facility Name</th>
                        <th>Current No. Of Patients</th>
                        <th>Newly Admitted Patients</th>
                        <th>Patients Discharged</th>
                        <th>Patient Details</th>
                        <th>Edit Hospital</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hospital in Model.Hospitals.OrderByDescending(r => r.Name))
                    {
                        <tr>
                            <td><span class="text-nowrap">@hospital.Region.Name</span></td>
                            <td><span class="text-nowrap">@hospital.Name</span></td>
                            <td align="right">
                                <div align="right">@hospital.AdmittedPatients</div>
                            </td>
                            <td align="right">
                                <div align="right">@hospital.NewlyAdmittedPatients</div>
                            </td>
                            <td align="right">
                                <div align="right">@hospital.DischargedPatients</div>
                            </td>
                            <td>
                                <a href="~/Patient/Index/@hospital.Id" class="btn btn-sm btn-primary">Click to View</a>
                            </td>
                            <td>
                                <a href="~/Hospital/Manage/@hospital.Id" class="btn btn-sm btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
